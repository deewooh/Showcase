<%- include('partials/header') %>

    <%- include('partials/navigation_cust') %>

        <div class="container">
            <div class="row justify-content-center">
                <img src="img/progressbar-1.png" alt="">
                <div class="col-sm-8">
                    <div class="card">
                        <div class="card-body">
                            <form action="/registrationform1" method="POST">
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label for="inputCRN">Customer Reference Number</label>
                                        <input type="text" class="form-control" id="inputCRN"
                                            placeholder="Drivers Licence / Customer Reference Number"
                                            value="<%= customer.crn %>" readonly=true>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="inputDOB">Date of Birth</label>
                                        <input type="date" class="form-control" id="inputDOB"
                                            placeholder="Date of Birth" name="inputDOB" value="<%= customer.dob %>">
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label for="inputGivenNames">Given Names</label>
                                        <input type="text" class="form-control" id="inputGivenNames"
                                            placeholder="Given Names" name="inputGivenNames"
                                            value="<%= customer.first_name %>">
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="inputSurname">Surname</label>
                                        <input type="text" class="form-control" id="inputSurname" name="inputSurname"
                                            placeholder="Surname" value="<%= customer.last_name %>">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputAddress">Address</label>
                                    <input type="text" class="form-control" id="inputAddress" placeholder="address"
                                        name="inputAddress" value="<%= customer.address %>">
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label for="inputEmail">Email</label>
                                        <input type="email" class="form-control" id="inputEmail" placeholder="email"
                                            name="inputEmail" value="<%= customer.email %>">
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="inputContractNumber">Contact Number</label>
                                        <input type="text" class="form-control" id="inputContractNumber"
                                            name="inputContractNumber" placeholder="contact number"
                                            value="<%= customer.phone %>">
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-dark">Next</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <%- include('partials/footer') %>