<%- include('partials/header') %>

<%- include('partials/navigation_cust') %>

<div class="container">
    <h1 class="portal-h1">Registration Summary</h1>
    <table class="table table-striped table-dark table-hover">
        <thead>
          <tr>
            <th scope="col">Registration ID</th>
            <th scope="col">VIN</th>
            <th scope="col">Approval Date</th>
            <th scope="col">Expiry Date</th>
            <th scope="col">Status</th>
            <th scope="col">Rejection Comment</th>
          </tr>
        </thead>
        <tbody>
        <% json_data = JSON.parse(data); %>
        <%if (json_data.length >0) { %>
            <% json_data.forEach(function(item){ %>
                <tr>
                  <td><%= item.Record.registrationID %></td>
                  <td><%= item.Record.vin %></td>
                  <td><%= item.Record.registrationDate %></td>
                  <td><%= item.Record.expirationDate %></td>
                  <td><%= item.Record.status %></td>
                  <td><%= item.Record.comment %></td>
                </tr>
            <% })
        } else{ %>
                <tr>
                    <td colspan="5">No Record Found</td>  
                </tr>
        <% } %>
        </tbody>
      </table> 
      <form action="/registrationform1">
        <input type="submit" value="New Registration" />
    </form>
</div>

<%- include('partials/footer') %>